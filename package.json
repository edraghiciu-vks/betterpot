{
  "name": "betterpot-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:api": "turbo run dev --filter=@betterpot/api",
    "dev:web": "turbo run dev --filter=@betterpot/web",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='packages/*'",
    "test": "turbo run test",
    "test:watch": "turbo run test --watch",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "setup": "bun install && turbo run build --filter='packages/*'"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "turbo": "1.11.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
